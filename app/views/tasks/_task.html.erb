<div class="panel panel-info">
    <div class="panel-heading">
      Created <%= time_ago_in_words(task.created_at) %> ago 
      <%= link_to "<i class='fa fa-trash'></i>".html_safe, task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class: 'pull-right' %>
      <%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_task_path(task), class: 'pull-right' %>
    </div>
    <div class="panel-body"><%= raw(task.content_html) %></div>
    <div class="panel-footer text-center">
      <div class="btn-group btn-group-justified">
        <% if task.state == 'doing' %>
          <td><%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-info btn-md btn-block" %></td>
          <td><%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-info btn-md btn-block" %></td>
        <% elsif task.state == 'done' %>
          <td><%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-info btn-md btn-block" %></td>
        <% else %>
          <td><%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-info btn-md btn-block" %></td>
        <% end %>  
      </div>
    </div>
</div>